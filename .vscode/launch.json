{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Bun Server",
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "--inspect",
                "src/server/app.ts"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug React Client",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/client"
        }
    ]
}