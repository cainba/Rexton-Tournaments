{
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Attach",
      "url": "https://debug.bun.sh/",
      "firefoxArgs": ["-P", "bun", "-no-remote"],
      "webRoot": "${workspaceFolder}",
      "linux": {
        "firefoxExecutable": "/usr/bin/firefox"
      },
      "reloadOnChange": {
        "watch": "${workspaceFolder}/**/*.ts",
        "ignore": "**/node_modules/**"
      }
      }
    }
  ]
}
