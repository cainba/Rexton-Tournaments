{
  "name": "rxt",
  "module": "rxt.js",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "paths": {
    "@rxt/server/*": ["./packages/rxt-server/*"],
    "@rxt/public/*": ["./packages/rxt-public/*"],
    "@rxt/helpers/*": ["./packages/rxt-helpers/*"],
    "@rxt/db/*": ["./packages/rxt-db/*"],
    "@rxt/client/*": ["./packages/rxt-client/*"]
  },
  "scripts": {
    "dev": "bun --hot rxt.js"
  }
}