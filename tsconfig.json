{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": "./src",
    "paths": {
      "src/*": [
        "./*"
      ],
      "src": [
        "."
      ],
      "src/assets/*": [
        "./assets/*"
      ],
      "src/assets/css/*": [
        "./assets/css/*"
      ],
      "src/assets/fonts/*": [
        "./assets/fonts/*"
      ],
      "src/assets/images/*": [
        "./assets/images/*"
      ],
      "src/assets/js/*": [
        "./assets/js/*"
      ],
      "src/assets/views/*": [
        "./assets/views/*"
      ]
    }
  },
  "buildOptions": {
    "include": [
      "./*.ts",
      "./*.tsx",
      "./*.js",
      "./*.html",
      "./*.css"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ],
    "verbose": true
  },
  "compileOnSave": true
}
